<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.dao.AddressDao">

    <insert id="addAddress" parameterType="address">
        insert into t_address (addressName, lng, lat)
        values (#{addressName}, #{lng}, #{lat})
    </insert>

    <delete id="deleteById" parameterType="int">
        delete
        from t_address
        where id = #{id}
    </delete>

    <select id="findAllMaps" resultType="address">
        select *
        from t_address
    </select>

    <select id="findPage" resultType="address" parameterType="string">
        select * from t_address
        <where>
            <if test="value != null and value.length>0">
                addressName = #{addressName}
            </if>
        </where>
    </select>
</mapper>