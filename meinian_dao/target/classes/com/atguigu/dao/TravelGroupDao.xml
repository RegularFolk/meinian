<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.dao.TravelGroupDao">
    <!--    设置主键生成器为TRUE,并且对指定的属性进行回填-->
    <insert id="add" parameterType="travelGroup" keyProperty="id" useGeneratedKeys="true">
        insert into t_travelgroup(code, name, helpCode, sex, remark, attention)
        values (#{code}, #{name}, #{helpCode}, #{sex}, #{remark}, #{attention})
    </insert>

    <insert id="addTravelGroupAndTravelItem" parameterType="groupAndItem">
        insert into t_travelgroup_travelitem(travelgroup_id, travelitem_id)
        VALUES (#{travelGroupId}, #{travelItemId})
    </insert>

    <select id="findPage" parameterType="string" resultType="travelGroup">
        select * from t_travelgroup
        <where>
            <if test="queryString!=null and queryString.length>0">
                code = #{queryString} or name like concat("%",#{queryString},"%") or helpCode = #{queryString}
            </if>
        </where>
    </select>

    <select id="getById" resultType="travelGroup">
        select *
        from t_travelgroup
        where id = #{id}
    </select>

    <select id="getItemIdsByGroupId" resultType="int">
        select travelitem_id
        from t_travelgroup_travelitem
        where travelgroup_id = #{id}
    </select>

    <update id="edit" parameterType="travelGroup">
        update t_travelgroup
        <set>
            <if test="code!=null and code.length>0">code=#{code},</if>
            <if test="name!=null and name.length>0">name=#{name},</if>
            <if test="helpCode!=null and helpCode.length>0">helpCode=#{helpCode},</if>
            <if test="sex!=null and sex.length>0">sex=#{sex},</if>
            <if test="remark!=null and remark.length>0">remark=#{remark},</if>
            <if test="attention!=null and attention.length>0">attention=#{attention},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteInterim" parameterType="int">
        delete
        from t_travelgroup_travelitem
        where travelgroup_id = #{id}
    </delete>

    <select id="findAll" resultType="travelGroup">
        select *
        from t_travelgroup
    </select>

    <select id="findCountByGroupId" parameterType="int" resultType="long">
        select count(*)
        from t_setmeal_travelgroup
        where travelgroup_id = #{id}
    </select>

    <delete id="delete" parameterType="int">
        delete
        from t_travelgroup
        where id = #{id}
    </delete>

    <resultMap id="travelGroupResultMap" type="travelGroup">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="helpCode" column="helpCode"/>
        <result property="sex" column="sex"/>
        <result property="remark" column="remark"/>
        <result property="attention" column="attention"/>
        <collection property="travelItems" column="id" select="com.atguigu.dao.TravelItemDao.findItemIdsByGroupId"/>
    </resultMap>

    <select id="findGroupsBySetMealId" resultMap="travelGroupResultMap" parameterType="int">
        select g.*
        from t_travelgroup g
                 join t_setmeal_travelgroup sg on g.id = sg.travelgroup_id
        where sg.setmeal_id = #{id}
    </select>

</mapper>

